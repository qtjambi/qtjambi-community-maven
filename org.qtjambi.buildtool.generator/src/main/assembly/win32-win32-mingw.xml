<?xml version='1.0' encoding='UTF-8'?>
<assembly
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1
		http://maven.apache.org/xsd/assembly-1.1.1.xsd">

	<id>win32-win32-mingw</id>

	<formats>
		<format>jar</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>licenses/LICENSE.*</include>
				<include>licenses/README.WIN32.MINGW.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>qmake/generator.pro/debug/generator.exe</include>
				<include>qmake/generator.pro/release/generator.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${mingw.home}/bin</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>libgcc*.dll</include>
				<include>libstdc++*.dll</include>
				<include>mingw*.dll</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${qtsdk.home}/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>QtCore4*.dll</include>
				<include>QtXml4*.dll</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>
